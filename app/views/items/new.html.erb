<main class="container">
  <h3 class="text-center">Add New Item</h3>
  <%= form_for @item do |i| %>
    <div class="form-group row mx-auto my-3">
      <%= i.label :name, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.text_field :name, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row mx-auto my-3">
      <%= i.label :notes, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.text_area :notes, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row mx-auto my-3">
      <%= i.label :brand_id, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.select :brand_id, options_from_collection_for_select(@brands, "id", "name", "1"), {}, {class:"w-25"} %>
      </div>
    </div>
    <div class="form-group row mx-auto my-3">
      <div class="col-sm-4">
        <%= i.label :status %>
        <span class="ml-5"><%= i.select :status, [['Working', true], ['Not Working', false]] %></span>
      </div>
      <div class="col-sm-8">
        <%= i.label :document %>
        <span class="ml-5"><%= i.file_field :document %></span>
      </div>
    </div>
    <div class="text-center mt-4">
      <%= i.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>