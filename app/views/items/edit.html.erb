<main class="container">
  <h3 class="text-center">Edit Item Details</h3>
  <%= form_for @item do |i| %>
    <div class="form-group row mx-auto my-4">
      <%= i.label :name, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.text_field :name, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row mx-auto my-4">
      <%= i.label :notes, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.text_area :notes, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row mx-auto my-4">
      <%= i.label :employee_id, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.select :employee_id, options_from_collection_for_select(@employees, "id", "email", @item.employee_id), { include_blank: "Blank" } , {class:"w-50"} %>
      </div> 
    </div>
    <div class="form-group row mx-auto my-4">
      <%= i.label :brand_id, class:"col-sm-1" %>
      <div class="col-sm-10">
        <%= i.select :brand_id, options_from_collection_for_select(@brands, "id", "name", @item.brand_id), {}, {class:"w-25"} %>
      </div>
    </div>
    <div class="form-group row mx-auto my-4">
      <div class="col-sm-4">
        <%= i.label :status %>
        <span class="ml-5"><%= i.select :status, [['Working', true], ['Not Working', false]] %></span>
      </div>
      <div class="col-sm-8">
        <%= i.label :document %>
        <span class="ml-4"><%= i.file_field :document %></span>
      </div>  
    </div>
    <div class="text-center my-4">
      <%= i.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>