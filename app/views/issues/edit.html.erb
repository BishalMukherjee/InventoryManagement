<main class="container">
  <h3 class="text-center">Edit Issue Details</h3>
  <%= form_for @issue do |i| %>
    <div class="form-group row my-4">
      <%= i.label :item_id, class:"col-sm-1 col-form-label" %>
      <div class="col-sm-10">
        <%= i.select :item_id, options_from_collection_for_select(@items, "id", "name", @issue.item_id), {}, {disabled: true, class:"w-25"} %>
      </div>
    </div>
    <div class="form-group row my-4">
      <%= i.label :details, class:"col-sm-1 col-form-label" %>
      <%= i.text_area :details, required: true, class:"col-sm-6" %>
    </div>
    <div class="row my-4">
      <%= i.label :status, required: true %>
      <span class="ml-5"><%= i.select :status, [['Solved', true], ['Unsolved', false]] %></span>
    </div>
    <div class="text-center my-4">
      <%= i.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>
