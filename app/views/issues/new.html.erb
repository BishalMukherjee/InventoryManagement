<main class="container">
  <h3 class="text-center">Add New Issue</h3>
  <%= form_for @issue do |i| %>
    <div class="form-group row mx-auto my-4">
      <%= i.label :item_id, class:"col-sm-1 col-form-label" %>
      <div class="col-sm-10">
        <%= i.select :item_id, options_from_collection_for_select(@items, "id", "name", "1"), {}, {class:"w-25"} %>
      </div>
    </div>
    <div class="form-group row mx-auto my-4">
      <%= i.label :details, class:"col-sm-1 col-form-label" %>
      <%= i.text_area :details, required: true, class:"col-sm-6" %>
    </div>
    <div class="text-center my-4">
      <%= i.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>