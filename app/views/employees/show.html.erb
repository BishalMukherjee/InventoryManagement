<main class="container">
  <table class="table table-borderless mt-4">
    <tr>
      <td>Employee name:</td>
      <td><%= @employee.name %></td>
    </tr>
    <tr>
      <td>Employee status:</td>
      <% if @employee.status %>
        <td><%= "Active" %></td>
      <% else %>
        <td><%= "Inactive" %></td>
      <% end %>
    </tr>
    <tr>
      <td>Employee's Items:</td>
      <td>
        <% if @items %>  
          <% @items.each do |it| %>
            <li><%= it.name %></li>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</main>