<main class="container">
  <h3 class="text-center">Add New Brand Name</h3>
  <%= form_for @brand do |b| %>
    <div class="form-group row mx-4 my-4">
      <%= b.label :name, class:"col-1 col-form-label font-weight-bold" %>
      <div class ="col-sm-10">
        <%= b.text_field :name, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row mx-4 my-4">
      <%= b.label :category_id, class:"col-1 col-form-label font-weight-bold" %>
      <div class ="col-sm-10">
        <%= b.select :category_id, options_from_collection_for_select(@categories, "id", "name", "1"), {}, class: "w-25" %>
      </div>
    </div>
    <div class="text-center my-5">
      <%= b.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>