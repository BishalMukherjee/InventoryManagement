<main class="container">
  <h3 class="text-center">Add New Category Name</h3>
  <%= form_for @category do |c| %>
    <div class="form-group row mx-4 my-4">
      <%= c.label :name, class:"col-1 col-form-label font-weight-bold" %>
      <div class ="col-sm-10">
        <%= c.text_field :name, required: true, class:"form-control" %>
      </div>
    </div>
    <div class="text-center my-5">
      <%= c.submit "Submit", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>